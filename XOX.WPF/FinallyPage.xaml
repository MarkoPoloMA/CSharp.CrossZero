<Window x:Class="XOX.WPF.FinallyPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:XOX.WPF"
        mc:Ignorable="d"
        Title="FinallyPage" Height="150" Width="150"
        WindowStartupLocation="CenterScreen" Background="#FFFAFAFA">
    <Window.Resources>
        <Style TargetType="Button">
            
        </Style>
    </Window.Resources>
    <Grid>
        <TextBlock x:Name="MessageText"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Top"
                   FontSize ="16" Margin="0,18,0,0"/>
        <Button  Margin="30,80,30,5" 
                 Content ="OK" 
                 Click="Button_Click"
                 Background="LightGray">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="5"/>
                </Style>
            </Button.Resources>
        </Button>

    </Grid>
</Window>
